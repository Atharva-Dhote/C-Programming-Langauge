#include <stdio.h> 
struct Employee 
{
char name[50]; 
int age; 
float salary; 
}; 
int main() 
{
printf("Name:-Atharva Dhote\n"); 
printf("Roll No.:-31\n"); 
struct Employee employee1 , employee2 , employee3 , employee4;
printf("\nEnter details for employee 1:-\n"); 
printf("Name: "); 
scanf("%s %s", employee1.name,employee3.name); 
printf("Age: "); 
scanf("%d", &employee1.age); 
printf("Salary: "); 
scanf("%f", &employee1.salary);
printf("------------------------------------------------- ");

printf("\nEnter details for employee 2:-\n"); 
printf("Name: "); 
scanf("%s %s", employee2.name , employee4.name); 
printf("Age: "); 
scanf("%d", &employee2.age); 
printf("Salary: "); 
scanf("%f", &employee2.salary);
printf("------------------------------------------------- ");

printf("\nDetails of employee 1:-\n"); 
printf("Name: %s %s\n", employee1.name, employee3.name);
printf("Age: %d\n", employee1.age); 
printf("Salary: %.2f\n", employee1.salary);
printf("------------------------------------------------- ");

printf("\nDetails of employee 2:-\n"); 
printf("Name: %s %s\n", employee2.name, employee4.name);
printf("Age: %d\n", employee2.age); 
printf("Salary: %.2f\n", employee2.salary); 
printf("------------------------------------------------- ");
} 
