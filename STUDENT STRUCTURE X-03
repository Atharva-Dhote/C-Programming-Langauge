// Online C compiler to run C program online
#include <stdio.h>
struct student 
{
    char name[10];
    int age;
    float per;
};
void main() 
{
   struct student s1,s2;
   printf("enter details of student 1 (name,age,per)=");
   scanf("%s%d%f",s1.name,&s1.age,&s1.per);

   printf("enter details of student 2 (name,age,per)=");
   scanf("%s%d%f",s2.name,&s2.age,&s2.per);

   printf("\n name = %s",s1.name);
   printf("\n age = %d",s1.age);
   printf("\n per =%f",s1.per);

   printf("\n name = %s",s2.name);
   printf("\n age = %d",s2.age);
   printf("\n per = %f",s2.per);

}
