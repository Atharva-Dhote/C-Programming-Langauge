// Online C compiler to run C program online
#include <stdio.h>

struct Student
{
    char name[10];
    int age;
    float per;
};
void main()
{
    struct Student s[5];
    int i;
    for(i=0;i<5;i++)
    {
        printf("\n Enter name,age & perecentage: ");
        scanf("%s%d%f",s[i].name,&s[i].age,&s[i].per);
    }
    for(i=0;i<5;i++)
    {
       printf("\n------------------------------");
       printf("\nDetails of student %d:",i+1);
       printf("\nName : %s",s[i].name);
       printf("\nAge : %d",s[i].age);
       printf("\nPercentage : %.2f",s[i].per);
    }
  
}
